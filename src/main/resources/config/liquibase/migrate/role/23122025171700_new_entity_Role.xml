<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

  <changeSet id="7d3a13be-7a77-4681-ba13-be7a77968149" author="heltonOliveira">
    <createTable tableName="rol_roles">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" unique="true" nullable="false"/>
      </column>

      <column name="uuid" type="text">
        <constraints unique="true" nullable="false"/>
      </column>

      <column name="active" type="boolean">
        <constraints nullable="false"/>
      </column>

      <column name="created_at" type="timestamp">
        <constraints nullable="false"/>
      </column>

      <column name="last_modified_at" type="timestamp"/>

      <column name="last_modified_by" type="text"/>

      <column name="deleted_at" type="timestamp"/>

      <column name="created_by" type="text"/>

      <column name="name" type="text">
        <constraints nullable="false"/>
      </column>

    </createTable>

    <createIndex tableName="rol_roles" indexName="idx_rol_roles__id">
      <column name="id" type="bigint"/>
    </createIndex>

    <createIndex tableName="rol_roles" indexName="idx_rol_roles__active">
      <column name="active" type="boolean"/>
    </createIndex>

    <createIndex tableName="rol_roles" indexName="idx_rol_roles__name">
      <column name="name" type="text"/>
    </createIndex>

  </changeSet>

</databaseChangeLog>
